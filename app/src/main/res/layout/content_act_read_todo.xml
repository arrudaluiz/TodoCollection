<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/utfpr_grey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.edu.utfpr.todocollection.ActReadTodo"
    tools:showIn="@layout/act_read_todo">

    <TextView
        android:id="@+id/txtReadName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/lbl_todo_name"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtReadNameCatch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/background_light"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/txtReadName"
        app:layout_constraintStart_toStartOf="@+id/txtReadName"
        app:layout_constraintTop_toBottomOf="@+id/txtReadName" />

    <TextView
        android:id="@+id/txtReadContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/lbl_todo_content"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtReadName"
        app:layout_constraintStart_toStartOf="@+id/txtReadName"
        app:layout_constraintTop_toBottomOf="@+id/txtReadNameCatch" />

    <TextView
        android:id="@+id/txtReadContentCatch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/background_light"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtReadContent"
        app:layout_constraintStart_toStartOf="@+id/txtReadContent"
        app:layout_constraintTop_toBottomOf="@+id/txtReadContent" />

</android.support.constraint.ConstraintLayout>